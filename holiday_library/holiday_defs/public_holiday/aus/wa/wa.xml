<?xml version="1.0" encoding="UTF-8"?>
<holidays xmlns="https://kayaposoft.com/enrico/xsd/1.0" country="aus">

	<metadata>
		<reference>http://australia.gov.au/topics/australian-facts-and-figures/public-holidays</reference>
	</metadata>
	
	<holiday validFrom="2011-01-01">
		<date>
			<fixedDate day="1" month="1" />
		</date>
		<name lang="en">New Year's Day</name>
		<observanceRule dayOfWeek="6" addDays="2" additionalHoliday="true" />
		<observanceRule dayOfWeek="7" addDays="1" additionalHoliday="true" />
	</holiday>
	
	<holiday validFrom="2011-01-01">
		<date>
			<nthWeekdayRuleDate dayOfWeek="1" month="3" nth="1" />
		</date>
		<name lang="en">Labour Day</name>
	</holiday>
	
	<holiday validFrom="2011-01-01">
		<date>
			<dateTransformation>
				<baseDate>
					<specialDate>EASTER_SUNDAY</specialDate>
				</baseDate>
				<addDays>-2</addDays>
			</dateTransformation>
		</date>
		<name lang="en">Good Friday</name>
	</holiday>
	
	<holiday validFrom="2011-01-01">
		<date>
			<dateTransformation>
				<baseDate>
					<specialDate>EASTER_SUNDAY</specialDate>
				</baseDate>
				<addDays>1</addDays>
			</dateTransformation>
		</date>
		<name lang="en">Easter Monday</name>
	</holiday>

	<holiday validFrom="2011-01-01">
		<date>
			<fixedDate day="25" month="4" />
		</date>
		<name lang="en">Anzac Day</name>
		<observanceRule dayOfWeek="6" addDays="2" additionalHoliday="true" />
		<observanceRule dayOfWeek="7" addDays="1" additionalHoliday="true" />
	</holiday>
	
	<holiday validFrom="2011-01-01">
		<date>
			<nthWeekdayRuleDate dayOfWeek="1" month="6" nth="1" />
		</date>
		<name lang="en">Western Australia Day</name>
	</holiday>
	
	<holiday validFrom="2019-01-01">
		<date>
			<dateTransformation>
				<baseDate>
					<fixedDate day="25" month="9" />
				</baseDate>
				<nearestWeekdayAfter dayOfWeek="1" />
			</dateTransformation>
		</date>
		<name lang="en">Queen's Birthday</name>
	</holiday>
	
	<holiday validFrom="2011-01-01">
		<date>
			<fixedDate day="25" month="12" />
		</date>
		<name lang="en">Christmas Day</name>
		<observanceRule dayOfWeek="6" addDays="2" additionalHoliday="true" />
		<observanceRule dayOfWeek="7" addDays="1" additionalHoliday="true" />
	</holiday>
	
	<holiday validFrom="2011-01-01">
		<date>
			<fixedDate day="26" month="12" />
		</date>
		<name lang="en">Boxing Day</name>
		<observanceRule dayOfWeek="6" addDays="2" additionalHoliday="true" />
		<observanceRule dayOfWeek="7" addDays="2" additionalHoliday="true" />
		<observanceRule dayOfWeek="1" addDays="1" additionalHoliday="true" />
	</holiday>
	
	<!-- old public holidays -->
	<holiday validFrom="2012-01-01" validTo="2016-12-31">
		<date>
			<dateTransformation>
				<baseDate>
					<fixedDate day="25" month="9" />
				</baseDate>
				<nearestWeekdayAfter dayOfWeek="1" />
			</dateTransformation>
		</date>
		<name lang="en">Queen's Birthday</name>
	</holiday>

</holidays>